<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSurface">@color/colorDark</item>
        <item name="colorPrimaryDark">@color/colorDark</item>
        <item name="colorAccent">@color/colorAccentDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorBackgroundLight">@color/colorGrayDark</item>
        <item name="colorRed">@color/colorRedDark</item>
        <item name="colorGreen">@color/colorGreenDark</item>
        <item name="backgroundErrorTransparent">@color/backgroundErrorTransparentDark</item>
        <item name="android:windowBackground">@color/colorDark</item>
        <item name="android:navigationBarColor">@color/colorDark</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>
    </style>

</resources>
