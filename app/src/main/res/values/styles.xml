<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentLight</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorBackgroundLight">@color/colorGrayLight</item>
        <item name="colorRed">@color/colorRedLight</item>
        <item name="colorGreen">@color/colorGreenLight</item>
        <item name="backgroundErrorTransparent">@color/backgroundErrorTransparentLight</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="colorSurface">?attr/colorBackgroundLight</item>
    </style>


    <style name="ToolbarStyle" parent="@style/Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="materialThemeOverlay">@style/ToolbarTheme</item>
    </style>

</resources>
